<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/object_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_toStartOf="@+id/download_icon"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="Text" />

        <ImageButton
            android:id="@+id/download_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_toStartOf="@+id/remove_icon"
            app:srcCompat="@drawable/ic_baseline_arrow_downward_24" />

        <ImageView
            android:id="@+id/remove_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="10dp"
            android:layout_toStartOf="@+id/info_icon"
            app:srcCompat="@drawable/ic_baseline_delete_24_red" />

        <ImageView
            android:id="@+id/info_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:padding="10dp"
            app:srcCompat="@drawable/ic_baseline_info_24_blue" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
